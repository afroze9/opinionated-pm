{
  "SerilogSettings": {
    "ElasticSearchSettings": {
      "Uri": "https://localhost:9200",
      "Username": "elastic",
      "Password": "dev123",
      "IndexFormat": "logs-project-api-{0:yyyy.MM}"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Consul": {
    "Token": "b301b49b-1806-4b2e-1706-9ac608a53d19",
    "Discovery": {
      "ServiceName": "health-checks-dashboard",
      "Scheme": "https",
      "Retry": {
        "Enabled": true,
        "MaxAttempts": 5
      },
      "Tags": [
        "nexus-service-type=framework"
      ]
    }
  },
  "TelemetrySettings": {
    "Endpoint": "http://localhost:4317",
    "ServiceName": "api-gateway",
    "ServiceVersion": "v1",
    "EnableAlwaysOnSampler": false,
    "SampleProbability": 0.2,
    "EnableConsoleExporter": false
  },
  "management": {
    "endpoints": {
      "health": {
        "showdetails": "always"
      },
      "enabled": true,
      "actuator": {
        "exposure": {
          "include": [
            "*"
          ]
        }
      }
    }
  },
  "HealthCheck": {
    "IntervalInSeconds": 3,
    "Clients": [
      {
        "Name": "Company API",
        "ServiceName": "company-api"
      },
      {
        "Name": "Project API",
        "ServiceName": "project-api"
      },
      {
        "Name": "API Gateway",
        "ServiceName": "api-gateway"
      },
      {
        "Name": "People API",
        "ServiceName": "people-api"
      }
    ]
  }
}